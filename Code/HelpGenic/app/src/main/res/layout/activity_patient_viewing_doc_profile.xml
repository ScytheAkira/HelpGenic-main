<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:fillViewport="true"

    android:verticalScrollbarPosition="right"
    >



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="442dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="20sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="236dp"
            android:layout_height="186dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/doctor2"
            android:paddingBottom="20dp"/>

        <TextView
            android:id="@+id/personaldetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#56B35A"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Doctor Details"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/docName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Huzaifa Tharki"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/docSpeciality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Psycopath"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_star_24" />

        <TextView
            android:id="@+id/docEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="huzaifatharki@fatima.com"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_email_24" />

        <TextView
            android:id="@+id/virtual_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#56B35A"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Virtual Schedule"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_baseline_laptop_windows_24" />

        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee: 500/PKR"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="120dp"/>

        <ListView
            android:id="@+id/virtual_app_list"
            android:layout_width="420dp"
            android:layout_height="207dp"
            android:nestedScrollingEnabled="true"
            />


        <TextView
            android:id="@+id/physical_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#56B35A"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Physical Schedule"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_people_24" />


        <ExpandableListView
            android:id="@+id/psExpandable"
            android:layout_width="412dp"
            android:layout_height="184dp"
            android:nestedScrollingEnabled="true" />

        <TextView
            android:id="@+id/your_appointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#56B35A"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Prior Appointments"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_history_24" />


        <ListView
            android:id="@+id/prior_appointments"
            android:layout_width="417dp"
            android:layout_height="190dp"
            android:nestedScrollingEnabled="true" />


    </LinearLayout>



        </ScrollView>