<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:orientation="vertical"
        android:paddingEnd="30dp"
        tools:context=".SignUpDonor">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="246dp"
            android:layout_height="183dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"


            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                android:text="Name:"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="end"
                android:ems="10"
                android:hint="John Smith"
                android:inputType="textPersonName"

                android:minHeight="48dp"
                android:textColorHint="#78909C" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                android:text="Email:"
                android:textAllCaps="false"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/editTextTextEmailAddress3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ems="10"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColorHint="#78909C" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_marginTop="27dp"

            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                android:text="Password:"
                android:textAllCaps="false"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/editTextTextPassword3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ems="10"
                android:hint="your Password"
                android:inputType="textPassword"
                android:minHeight="48dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
           android:layout_marginTop="27dp"

            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                android:text="Blood Group:"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/textInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/bloodGroups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="A+"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toTopOf="@+id/DocList"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/searchView" />
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_marginTop="27dp"

            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                android:text="Gender:"
                android:textAllCaps="false"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/editTextTextPersonName8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ems="10"
                android:hint="M or F"
                android:inputType="textCapCharacters"
                android:minHeight="48dp"
                android:textColorHint="#78909C"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_marginTop="27dp"

            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                android:text="Ph #:"
                android:textAllCaps="false"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/editTextTextPersonName9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ems="10"
                android:hint="03XXXXXXXXX"
                android:inputType="phone"
                android:minHeight="48dp"
                android:textColorHint="#78909C" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_marginTop="27dp"

            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                android:text="Address:"
                android:textAllCaps="false"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ems="10"
                android:hint="St# x, house #x , xyz..."
                android:inputType="text"
                android:minHeight="48dp"
                android:textColorHint="#78909C" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_marginTop="27dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                android:text="DOB:"
                android:textAllCaps="false"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/donorDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_view_custom_deesign"
                android:hint="Date of Birth"
                android:padding="12dp"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchView" />

        </LinearLayout>


        <Button
            android:id="@+id/submitButtonDonor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="Create Your Account"
            android:layout_marginTop="27dp"
            android:textAllCaps="false"
            android:textSize="20sp" />



    </LinearLayout>
</ScrollView>
